{
  "name": "lang-wave",
  "version": "0.0.2",
  "description": "Language detector",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "lint": "tsc && eslint --ignore-path .eslintignore --ext .js,.ts",
    "lint:fix": "tsc && eslint --ignore-path .eslintignore --fix --ext .js,.ts",
    "ci": "pnpm run lint && pnpm run build",
    "release": "pnpm run lint && pnpm run build && pnpm changeset publish",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  },
  "modules": "dist/index.mjs",
  "types": "dist/index.d.ts"
}
